<Window x:Class="keycuts.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:keycuts.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="425">
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Content="{Binding Path=Step1}" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Row="1">
                <Label Content="{Binding Path=Step2}" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Row="2">
                <Label Content="{Binding Path=Step3}" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Grid.Row="3">
                <Label Content="{Binding Path=Step4}" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
